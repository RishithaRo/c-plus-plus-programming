// DATA MODIFIERS
#include<bits/stdc++.h>
using namespace std;
int main()
{
	int salary=1000;
	long int sal=20000;
	long long int balance=110000000000000000000;
	unsigned int positive=20;
	//Unsigned integer values can only store non-negative values.
	short int r=89;
	signed int all=-90; 
	//A signed int can store both positive and negative values.
	cout<<"int size"<<sizeof(salary)<<endl;
	// sizeof() is a function that returns the size of data.
	cout<<"long int size"<<sizeof(sal)<<endl;
	cout<<"long long int size"<<sizeof(balance)<<endl;
	cout<<"unsigned int size"<<sizeof(positive)<<endl;
	cout<<"short size"<<sizeof(r)<<endl;
	cout<<"signed int size"<<sizeof(all)<<endl;
	return 0;
}
